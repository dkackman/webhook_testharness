extends layout

include mixins/card
include mixins/sse-status

block content
  .container-fluid
    .d-flex.align-items-center.justify-content-between.mb-3
      h2.mb-0= title
      +sseStatusBadge()

    //- Launcher IDs Input Form
    .card.mb-3
      +cardHeaderSimple('NFT Launcher IDs')
      .card-body
        form#nft-form
          .input-group
            input#launcher-ids-input.form-control.font-monospace(
              type="text"
              placeholder="Enter NFT launcher IDs (comma-separated)"
              value=launcher_ids
            )
            button.btn.btn-primary(type="submit") Lookup

    //- Loading State
    #loading.text-center.p-4(style="display: none;" role="status" aria-live="polite" aria-label="Loading NFT details")
      .spinner-border.text-primary.mb-2(role="status" aria-hidden="true")
        span.visually-hidden Loading...
      p.text-muted Loading NFT details...

    //- Error State
    #error.alert.alert-danger(style="display: none;" role="alert" aria-live="assertive")
      strong Error:
      span#error-message

    //- NFT Data
    .card#nfts-container(style="display: none;")
      +cardHeaderSimple('NFT Details')
      .card-body.p-0
        pre#nfts-data.m-0.p-3.font-monospace.small.event-details

  script(src='/javascripts/pages/nfts.js')
